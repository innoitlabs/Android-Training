<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Animations &amp; Gestures"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Property Animations Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Animations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_property_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Animation Demo"
            android:layout_marginBottom="16dp" />

        <View
            android:id="@+id/animated_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/purple_500"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- View Animations Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Animations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_view_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Animation Demo"
            android:layout_marginBottom="16dp" />

        <!-- MotionLayout Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MotionLayout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_motion_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MotionLayout Demo"
            android:layout_marginBottom="16dp" />

        <!-- Custom View Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Views"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom View Demo"
            android:layout_marginBottom="16dp" />

        <!-- Gesture Detection Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gesture Detection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_gesture_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesture Detection Demo"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView Animations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_recycler_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecyclerView Animation Demo"
            android:layout_marginBottom="16dp" />

        <!-- Shared Element Transition Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shared Element Transitions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_shared_transition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared Element Transition Demo"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>