<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Android Performance &amp; Security"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Select a demo to explore performance optimization and security practices:"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMemoryLeakDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Memory Leak Demo"
            app:icon="@android:drawable/ic_menu_info_details" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImageOptimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Image Optimization"
            app:icon="@android:drawable/ic_menu_gallery" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSecureStorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Secure Storage"
            app:icon="@android:drawable/ic_lock_lock" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNetworkOptimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Network Optimization"
            app:icon="@android:drawable/ic_menu_share" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPerformanceTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Performance Testing"
            app:icon="@android:drawable/ic_menu_manage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotesApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Secure Notes App"
            app:icon="@android:drawable/ic_menu_edit" />

    </LinearLayout>

</ScrollView>