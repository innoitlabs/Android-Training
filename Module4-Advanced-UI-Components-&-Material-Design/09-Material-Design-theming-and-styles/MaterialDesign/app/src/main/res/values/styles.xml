<resources>
    <!-- Button Styles -->
    <style name="Widget.MaterialDesign.Button" parent="Widget.Material3.Button">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="Widget.MaterialDesign.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="Widget.MaterialDesign.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Widget.MaterialDesign.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:padding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.MaterialDesign.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <style name="TextAppearance.MaterialDesign.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.MaterialDesign.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.MaterialDesign.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:alpha">0.7</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.MaterialDesign.Quote" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">italic</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.MaterialDesign.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
        <item name="contentPadding">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <style name="Widget.MaterialDesign.Card.Profile" parent="Widget.MaterialDesign.Card">
        <item name="cardElevation">12dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="contentPadding">24dp</item>
    </style>
    
    <style name="Widget.MaterialDesign.Card.Info" parent="Widget.MaterialDesign.Card">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">20dp</item>
    </style>
    
    <!-- Input Styles -->
    <style name="Widget.MaterialDesign.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/purple_500</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.MaterialDesign.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/purple_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeColor">@color/purple_500</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
    

</resources>
