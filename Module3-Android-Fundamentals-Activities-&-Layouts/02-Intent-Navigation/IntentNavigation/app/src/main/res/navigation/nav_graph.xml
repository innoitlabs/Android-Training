<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment - Starting destination -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.intentnavigation.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        
        <!-- Arguments that can be passed to this fragment -->
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="userId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="isLoggedIn"
            app:argType="boolean"
            android:defaultValue="false" />
        
        <!-- Action to navigate to DetailFragment -->
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        
        <!-- Action to navigate to SettingsFragment -->
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- Detail Fragment -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.intentnavigation.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail">
        
        <!-- Arguments that can be passed to this fragment -->
        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="userId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="isLoggedIn"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.intentnavigation.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
