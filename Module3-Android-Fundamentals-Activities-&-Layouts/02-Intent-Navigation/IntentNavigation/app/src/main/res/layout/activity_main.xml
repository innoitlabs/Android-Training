<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Intent System &amp; Navigation Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Learn Android Intents and Navigation Component"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Input Section -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Enter your username"
            app:layout_constraintTop_toBottomOf="@id/textViewSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Explicit Intent Section -->
        <TextView
            android:id="@+id/textViewExplicitTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1. Explicit Intent (In-App Navigation)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewExplicitDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Navigate to a specific activity within your app and pass data"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewExplicitTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonExplicitIntent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Navigate to SecondActivity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewExplicitDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Implicit Intent Section -->
        <TextView
            android:id="@+id/textViewImplicitTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2. Implicit Intent (External Apps)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonExplicitIntent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewImplicitDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Interact with other apps on the device"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewImplicitTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonImplicitIntent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Open Web Browser"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewImplicitDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonShareIntent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Share Text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/buttonImplicitIntent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Navigation Component Section -->
        <TextView
            android:id="@+id/textViewNavigationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3. Navigation Component (Modern)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonShareIntent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewNavigationDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Modern navigation using Jetpack Navigation Component with SafeArgs"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewNavigationTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonNavigationComponent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Try Navigation Component"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewNavigationDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Section -->
        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This app demonstrates the complete Intent system and modern navigation patterns in Android. Each button showcases different aspects of Android navigation."
            android:textSize="14sp"
            android:textAlignment="center"
            android:background="@drawable/info_background"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonNavigationComponent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>