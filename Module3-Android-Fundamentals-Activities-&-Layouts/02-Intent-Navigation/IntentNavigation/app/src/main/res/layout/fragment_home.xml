<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Welcome to Navigation Component!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Modern Navigation with SafeArgs"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Arguments Display Section -->
        <TextView
            android:id="@+id/textViewArgs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arguments will be displayed here"
            android:textSize="14sp"
            android:background="@drawable/info_background"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Navigation Buttons Section -->
        <TextView
            android:id="@+id/textViewNavigationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Navigation Options"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewArgs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonNavigateToDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Navigate to Detail (with SafeArgs)"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewNavigationTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonNavigateToSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Navigate to Settings"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/buttonNavigateToDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Explanation Section -->
        <TextView
            android:id="@+id/textViewExplanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This fragment demonstrates:\n\n• Receiving arguments via SafeArgs\n• Type-safe argument passing\n• Navigation to other fragments\n• Modern navigation patterns\n• No more getStringExtra() calls!"
            android:textSize="14sp"
            android:background="@drawable/explanation_background"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/buttonNavigateToSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
